---
import { navLinks, whatsappNumber, whatsappMessage } from '@/services/constantes';
const whatsappSm = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;

---

<!-- Navegación móvil con checkbox hack (sin JavaScript) -->
<div class="md:hidden fixed bottom-3 right-4 z-50">
  <!-- Input checkbox oculto para controlar el estado -->
  <input type="checkbox" id="menu-toggle" class="peer hidden" />
  
  <!-- Label como botón circular -->
  <label
    for="menu-toggle"
    class="w-12 h-12 bg-primary rounded-full shadow-lg flex items-center justify-center hover:scale-110 active:scale-95 transition-transform duration-300 cursor-pointer peer-checked:bg-black"
    aria-label="Abrir menú de navegación"
  >
    <!-- Icono de menú (visible por defecto) -->
    <svg
      class="w-8 h-8 text-black peer-checked:hidden transition-all duration-300"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"
      ></path>
    </svg>
    
    <!-- Icono de cerrar (visible cuando está checked) -->
    <svg
      class="w-8 h-8 text-white hidden peer-checked:block transition-all duration-300 "
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M6 18L18 6M6 6l12 12"
      ></path>
    </svg>
  </label>

  <!-- Menú desplegable controlado por peer-checked -->
  <nav
    class="absolute bottom-15 right-0 border-[0.6px] border-black  bg-black/10 backdrop-blur-xl rounded-3xl shadow-2xl overflow-hidden transition-all duration-300 ease-out opacity-0 scale-0 origin-bottom-right pointer-events-none peer-checked:opacity-100 peer-checked:scale-100 peer-checked:pointer-events-auto "
    aria-label="Menú de navegación móvil"
  >
    <ul class="font-mango list-none py-6 px-8  min-w-[340px]" role="menubar">
      {navLinks.map((link) => (
        <li role="none">
          <a
            href={link.href}
            class="block text-black hover:translate-x-2 active:scale-95 transition-all duration-200 text-lg font-medium py-2 focus:outline-none "
            role="menuitem"
          >
            {link.name}
          </a>
        </li>
      ))}
      <li role="none" class="pt-4 border-t border-white/20">
        <a
          href={whatsappSm}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-green-500 hover:text-white hover:cursor-pointer hover:translate-x-2 active:scale-95 transition-all duration-200 text-lg font-semibold py-2 group "
          role="menuitem"
          aria-label="Contactar por WhatsApp"
        >
          <svg class="w-6 h-6 transition-transform group-hover:rotate-12" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
          <span>WhatsApp</span>
        </a>
      </li>
    </ul>
  </nav>
</div>