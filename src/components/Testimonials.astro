---
import testimonials from '@/data/testimonials.json';
---

<section
  class="w-full flex flex-col items-center justify-center px-4 py-16 md:py-30  "
  aria-label="Testimonios de clientes"
>
  <div class="max-w-7xl w-full ">
    <!-- T칤tulo de la secci칩n -->
    <div class=" flex flex-col text-center justify-center items-center mb-12   gap-y-10 w-auto">
      <img src="/clientes.svg" alt="Clientes Svg" class=" w-full scale-80 ">
      <p class="font-mango text-xl  uppercase md:text-5xl text-black">
        Lo que dicen nuestros clientes sobre Valmar칤
      </p>
    </div>

    <!-- Grid de testimonios -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8 mb-12">
      {testimonials.map((testimonial, index) => {
        // Alternar colores de fondo
        const bgColor = index % 2 === 0 ? 'bg-primary' : 'bg-black';
        // const borderColor = index % 3 === 0 ? 'border-primary' : 'border-gray-300';
        const textColor = index % 2 === 0 ? 'text-black' : 'text-white';
        const starColor = index % 2 === 0 ? 'text-black' : 'text-primary';

        
        return (
          <article 
            class={`${bgColor} rounded-2xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-2 flex flex-col justify-between`}
          >
            {/* Nombre del cliente */}
            <div class="mb-4">
              <h3 class={`font-mango text-2xl font-bold ${textColor} mb-1`}>
                {testimonial.name}
              </h3>
              <p class={`text-sm ${textColor} font-mango`}>
                {testimonial.event}
              </p>
            </div>

            {/* Estrellas de rating */}
            <div class="flex gap-1 mb-3">
              {Array.from({ length: testimonial.rating }).map(() => (
                <svg class={`w-5 h-5 ${starColor}`} fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>

            {/* Comentario */}
            <p class={`text-sm ${textColor} font-mango`}>
              {testimonial.comment}
            </p>
          </article>
        );
      })}
    </div>

    <!-- Bot칩n para agregar testimonio (futuro) -->
    <div class="text-center">
      <button
        class="font-mango uppercase px-8 py-3 bg-primary border-2 border-black rounded-full  transition-all duration-300 text-lg font-semibold disabled:opacity-50 disabled:cursor-not-allowed"
        disabled
        title="Pr칩ximamente podr치s dejar tu rese침a en Google"
      >
        Dejanos tu experiencia
      </button>
      <p class="mt-3 text-sm text-gray-500 font-mango">
        Pr칩ximamente: Deja tu rese침a en Google
      </p>
    </div>
  </div>
  <!-- Call to action final -->
  <div class="mt-16 md:mt-20 text-center">
    <div class="bg-gradient-to-r from-primary/20 via-primary/10 to-primary/20 rounded-3xl p-8 md:p-12 max-w-4xl mx-auto border-2 border-primary/30">
      <p class="font-mango text-2xl md:text-4xl font-bold mb-4">
        La botana primero<span class="text-primary">.</span>
      </p>
      <p class="text-lg md:text-xl text-gray-700 mb-6">
        Porque sabemos que un buen evento empieza con buenos snacks
      </p>
      <p class="text-base md:text-lg text-gray-600 italic">
        游늸 Guadalajara, Jalisco | 游꿀 Haciendo eventos m치s sabrosos desde siempre
      </p>
    </div>
  </div>
</section>

<style>
  /* Animaci칩n de entrada para los testimonios */
  article {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  article:nth-child(1) { animation-delay: 0.1s; }
  article:nth-child(2) { animation-delay: 0.2s; }
  article:nth-child(3) { animation-delay: 0.3s; }
  article:nth-child(4) { animation-delay: 0.4s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
