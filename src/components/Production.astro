<section
  class="flex flex-col h-full relative items-center justify-center my-32"
  aria-label="Próximamente más contenido"
>
  <figure class="relative h-auto w-full flex items-center flex-nowrap">
    

      <img
        id="valamri-font-big"
        src="/fontBig.svg"
        alt="nombre de la la empresa con animacion "
        class="max-w-none h-[105dvh] w-auto"
      />
  
    
    <img
      id="valamri-font-big"
      src="/fontBig.svg"
      alt="nombre de la la empresa con animacion "
      class="max-w-none h-[105dvh] w-auto"
    />
  </figure>
  <div class="absolute inset-0 flex justify-center items-center">
    <!-- Checkbox oculto para manejar el estado -->
    <input type="checkbox" id="toggle-grid" class="peer hidden" />
  
    <!-- Botón que activa el checkbox -->
    <label
      for="toggle-grid"
      class="w-72 h-72 rounded-full border-6 border-primary group flex justify-center items-center content-center hover:cursor-pointer hover:scale-105  peer-checked:opacity-0 peer-checked:pointer-events-none transition-all duration-200 ease-out z-20 overflow-hidden"
    >
      <div
        class="bg-primary w-full h-[100dvh] rounded-full -translate-y-full justify-center content-center items-center group-hover:translate-y-0 transition-all duration-700 flex"
      >
        <span
          class="font-mango uppercase text-2xl text-center font-semibold m-auto"
          >¿Quienes somos?</span
        >
      </div>
    </label>
  
    <!-- Div con grilla que aparece al hacer click -->
    <div
      class="fixed inset-0 opacity-0 scale-0 peer-checked:opacity-100 peer-checked:scale-100 transition-all duration-700 ease-out pointer-events-none peer-checked:pointer-events-auto justify-center items-center content-center backdrop-blur-md bg-black/10"
    >
      <div class="w-full h-[100dvh] p-8 flex justify-center items-center gap-4">
        <!-- Elementos de la grilla -->
        <div
          class="bg-primary w-full h-full rounded-r-full rounded-l-full flex flex-col items-center justify-center p-4 hover:scale-105 transition-transform"
        >
  
            <!-- Botón para cerrar (opcional) -->
            <label
              for="toggle-grid"
              class="w-12 h-12 bg-black rounded-full flex items-center justify-center hover:scale-110 hover:rotate-90 transition-all duration-300 cursor-pointer z-30 "
            >
              <span class="text-white text-2xl font-bold">×</span>
            </label>
  
          <img src="/logo.svg" alt="logo de la empresa" />
          <p>nombre</p>
          <p>descrition</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes moveName {
    to {
      transform: translateX(-100%);
    }
  }
  #valamri-font-big {
    animation: moveName 13s ease-in-out infinite;
    white-space: nowrap;
  }
</style>

